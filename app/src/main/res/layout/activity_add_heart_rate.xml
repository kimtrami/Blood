<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f6ff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#E34957">

            <TextView
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:background="@drawable/ic_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mulish_extra_bold_800"
                android:text="@string/addHeartRate"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/imgHeart"
            android:layout_width="56dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:src="@drawable/heart_normal" />

        <TextView
            android:id="@+id/txtStateHeartRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/mulish_bold"
            android:text="Normal Heart Rate"
            android:textColor="#1E2D50"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtRestingHeartRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/mulish_regular"
            android:text="Resting Heart Rate 60-100 BPM"
            android:textColor="#00C57E"
            android:textSize="10sp" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lstStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="1"
            tools:listitem="@layout/item_status_add_heart_rate">

        </androidx.recyclerview.widget.RecyclerView>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="328dp"
            android:layout_height="190dp"
            android:layout_gravity="center">

            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/numberPickerBpm"
                android:layout_width="64dp"
                android:layout_height="180dp"
                android:layout_centerInParent="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:np_dividerColor="#0AB678"
                app:np_height="180dp"
                app:np_max="150"
                app:np_min="1"
                app:np_selectedTextColor="#E34957"
                app:np_selectedTextSize="@dimen/selected_text_size"
                app:np_textColor="#565656"
                app:np_textSize="@dimen/text_size"
                app:np_typeface="@string/mulish400"
                app:np_value="60"
                app:np_width="64dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:fontFamily="@font/mulish_bold"
                android:text="BPM"
                android:textColor="#1E2D50"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@id/numberPickerBpm"
                app:layout_constraintStart_toEndOf="@id/numberPickerBpm"
                app:layout_constraintTop_toTopOf="@id/numberPickerBpm" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/txtTimeAnDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            android:fontFamily="@font/montserrat_700"
            android:text="@string/dateTime"
            android:textColor="#B21212"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:background="@drawable/bg_time_date">

                <TextView
                    android:id="@+id/btnCalendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_calendar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtCalendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/mulish_semi_bold_600"
                    android:textColor="#1E2D50"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@id/btnCalendar"
                    app:layout_constraintStart_toEndOf="@id/btnCalendar"
                    app:layout_constraintTop_toTopOf="@id/btnCalendar" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:background="@drawable/bg_time_date">

                <TextView
                    android:id="@+id/btnClock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_clock"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/mulish_semi_bold_600"
                    android:textColor="#1E2D50"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@id/btnClock"
                    app:layout_constraintStart_toEndOf="@id/btnClock"
                    app:layout_constraintTop_toTopOf="@id/btnClock" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/txtNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat_700"
            android:text="@string/note"
            android:textColor="#B21212"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edtNote"
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_edt_add_pressure"
            android:hint="@string/enterNote"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="#999999"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/btnSave"
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_btn_got_it"
            android:padding="16dp"
            android:text="@string/save"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
