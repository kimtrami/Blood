<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Blood"
        tools:targetApi="31">
        <activity
            android:name=".view.splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.home.HomeActivity" />
        <activity
            android:name=".view.addbloodsugar.AddBloodSugarActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".view.language.LanguageActivity" />
        <activity
            android:name=".view.addpressure.AddBloodPressureActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".view.moreinfo.MoreInfoActivity" />
        <activity android:name=".view.resultsugar.ResultSugarActivity" />
        <activity android:name=".view.resultpressure.ResultPressureActivity" />
        <activity
            android:name=".view.editpressure.EditBloodPressureActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".view.intro.IntroActivity" />
        <activity android:name=".view.editbloodsugar.EditBloodSugarActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".view.addheartrate.AddHeartRateActivity"/>
        <activity android:name=".view.resultheartrate.ResultHeartRateActivity"/>
        <activity android:name=".view.infodetailpressure.InfoDetailPressureActivity"/>
        <activity android:name=".view.infodetailbloodsugar.InfoDetailBloodSugarActivity"/>
        <activity android:name=".view.infodetailheartrate.InfoDetailHeartRateActivity"/>
        <activity android:name=".view.infodetailweightbmi.InfoDetailWeightBmiActivity"/>
        <activity android:name=".view.policyactivity.PolicyActivity"/>
        <activity android:name=".view.history.ActivityHistoryPressure"/>
        <activity android:name=".view.history.ActivityHistoryBloodSugar"/>
        <activity android:name=".view.history.ActivityHistoryHearRate"/>

    </application>

</manifest>